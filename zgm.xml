<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="plugin" group="content" method="upgrade">
	<name>plg_content_zgm</name>
	<author>zwebtheme</author>
	<creationDate>April 2017</creationDate>
	<copyright>Copyright (C) 2017 zwebtheme.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>mdsuzonmia01@yahoo.com</authorEmail>
	<authorUrl>http://zwebtheme.com</authorUrl>
	<version>1.0.0</version>
	<description>This plugin adds a Google map field to articles. Enable it and select a category. </description>
	<files>
		<filename plugin="zgm">zgm.php</filename>
		<filename>index.html</filename>
		<folder>forms</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_zgm.ini</language>
		<language tag="en-GB">en-GB.plg_content_zgm.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="category" type="category" extension="com_content" label="PLG_CONTENT_ZGM_OPTION_CATEGORY" />
			</fieldset>
		</fields>
	</config>
</extension>
